# Server
NODE_ENV=development
PORT=3000

# SMTP (default: Mailhog for local dev — start with: docker-compose up -d mailhog; UI: http://localhost:8025)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@localhost

# Rate limiting (requests per window per IP)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=10

# Request body size limit (bytes, default 10MB)
BODY_LIMIT=10485760

# Optional: Telegram bot token (from BotFather). If set, POST /:chat_id sends to Telegram and bot replies to /start with chat_id.
# TELEGRAM_BOT_TOKEN=

# Bot username for the main page instructions (without @). Example: MyRelayBot → link https://t.me/MyRelayBot
# TELEGRAM_BOT_USERNAME=MyRelayBot
